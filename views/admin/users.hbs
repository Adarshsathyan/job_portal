<div id="page-wrapper">
    <div class="header">
        <h1 class="page-header">
            Users
        </h1>

        <ol class="breadcrumb">
            <li><a href="#">Home</a></li>
            <li><a href="#">Tables</a></li>
            <li class="active">Data</li>
        </ol>
    </div>

    <div id="page-inner">
        <div class="row">
            <div class="col-md-12">

                <div class="card">
                    <div class="card-action">

                    </div>
                    <div class="card-content">
                        <div class="table-responsive">
                            <table class="table table-striped table-bordered table-hover" id="user_details">
                                <thead>
                                    <tr>
                                        <th>Name</th>
                                        <th>Email</th>
                                        <th>Mobile</th>
                                        <th>Action</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    {{#each users}}
                                    <tr>
                                        <td>{{this.name}}</td>
                                        <td>{{this.username}}</td>
                                        <td>{{this.phone}}</td>
                                        <td><a href="/admin/viewuser/{{this._id}}" class="btn btn-primary">View</a>
                                            <a class="btn btn-danger" href="/admin/deleteuser/{{this._id}}">Delete</a>
                                            <a class="btn btn-warning" href="/admin/blockuser/{{this._id}}">Block</a>
                                        </td>
                                    </tr>
                                    {{/each}}
                                </tbody>
                            </table>
                        </div>

                    </div>
                </div>

            </div>
        </div>
    </div>
    <footer>
        <p>All right reserved</p>
    </footer>
</div>
</div>