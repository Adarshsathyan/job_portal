<div id="page-wrapper">
    <div class="header">
        <h1 class="page-header">
            Employees
        </h1>

        <ol class="breadcrumb">
            <li><a href="#">Home</a></li>
            <li><a href="#">Tables</a></li>
            <li class="active">Data</li>
        </ol>

    </div>

    <div id="page-inner">

        <div class="row">
            <div class="col-md-12">
                
                <div class="card">
                    <div class="card-action">

                    </div>
                    <div class="card-content">
                        <div class="table-responsive">
                            <table class="table table-striped table-bordered table-hover" id="employee_details">
                                <thead>
                                    <tr>
                                        <th>Comapny Name</th>
                                        <th>Email</th>
                                        <th>Mobile</th>
                                        <th>Address</th>
                                        <th>Website</th>
                                        <th>Action</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    {{#each employees}}
                                    <tr>
                                        <td><a href="/admin/viewemployee/{{this._id}}">{{this.name}}</a></td>
                                        <td>{{this.username}}</td>
                                        <td>{{this.mobile}}</td>
                                        <td>{{this.address}}</td>
                                        <td>{{this.website}}</td>
                                        <td>
                                            <a class="btn btn-success" href="/admin/edit/{{this._id}}">Edit</a>
                                            <a class="btn btn-danger" href="/admin/delete/{{this._id}}">Delete</a>
                                            <a href="/admin/block/{{this._id}}" class="btn btn-warning">Block</a>
                                        </td>
                                    </tr>
                                    {{/each}}

                                </tbody>
                            </table>
                        </div>

                    </div>
                </div>
                
            </div>
        </div>
       
        

    </div>
    
</div>

