<section class="section section-bg" id="call-to-action"
    style="background-image: url(/employee/job_images/{{job._id}}.jpg)">
    <div class="container">
         <div class="col-lg-10 offset-lg-1">
                    <div class="cta-content">
                        <br>
                        <br>
                        <h2><em>Apply Here</em></h2>
                        <p>Fill the form</p>

                       
                    </div>
                </div>
    </div>
</section>
<section class="section">
    <div class="container">
        <br>
        <br>
        <br>
        <br>
        <div class="row">

            <div class="col-md-6">
                <form action="/apply" method="POST" enctype="multipart/form-data" >
                    <div class="form-group">
                        <label>Full name:</label>
                        <input type="text" class="form-control" name="name" required>
                    </div>
                    <div class="form-group">
                        <label>Email:</label>
                        <input type="email" class="form-control" name="email" required>
                         <input type="hidden" name="eid" value="{{job.eid}}">
                         <input type="hidden" name="uid" value="{{user._id}}">
                         <input type="hidden" name="jid" value="{{job._id}}">
                         <input type="hidden" name="designation" value="{{job.designation}}">
                         <input type="hidden" name="companyname" value="{{job.name}}">
                         <input type="hidden" name="type" value="{{job.type}}">
                         <input type="hidden" name="approve" value="0">
                    </div>
                    <div class="form-group">
                        <label>Describe about you shortly</label>
                        <textarea  class="form-control" name="about" required></textarea>
                    </div>
                    <div class="form-group">
                        <label>Proffesion Title:</label>
                        <input type="text" class="form-control" name="title" required>
                    </div>
                    <div class="form-group">
                        <label>Experience</label>
                        <input type="text" class="form-control" name="experience" required>
                    </div>
                    <div class="form-group">
                        <label>Previous Work(optional)</label>
                        <input type="text" class="form-control" name="worked" >
                    </div>
                    <div class="form-group">
                        <label>Website/Portfolio link:(optional)</label>
                        <input type="text" class="form-control" name="link" >
                    </div>
                    <div class="form-group">
                        <label>Image:</label>
                        <input type="file" class="form-control  btn btn-primary" name="image" required>
                    </div>
                    <div class="form-group">
                        <label>Resume:</label>
                        <input type="file" class="form-control btn btn-primary" name="resume" required>
                    </div>
                    <div class="form-group">
                        <label>Location :</label>
                        <input type="text" class="form-control" name="location" required>
                    </div>
                    <div class="form-group">
                        <label>Skills:</label>
                        <input type="text" class="form-control" name="skills"required>
                    </div>
                    <div class="form-group">
                        <label>Mobile</label>
                        <input type="text" class="form-control" name="phone"required>
                    </div>
                    <button class="btn btn-primary">Apply</button>
                </form>
            </div>
            <div class="col-md-6">
                <article class="pl-5 pt-5">
                    <h4>{{job.designation}}</h4>
                    <br>
                    
                    <p class="btn btn-danger text-white">{{job.type}}</p>
                    <br>
                    <br>
                    <h4>Requirements</h4>
                    <br>
                    <h6>Job Type :<span style="margin-left:83px ;">{{job.type}}</span> </h6>
                    <br>
                    <h6>Experience :<span style="margin-left:69px ;">{{job.experience}}</span> </h6>
                    <br>
                    <h6>Language :<span style="margin-left:77px ;">{{job.language}}</span> </h6>
                    <br>
                    <h6>Qualification :<span style="margin-left:54px ;">{{job.qualification}}</span> </h6>
                    <br>
                    <h6>Required Skills :<span style="margin-left:43px ;">{{job.skills}}</span> </h6>
                    <br>
                    <h6>Salary :<span style="margin-left:109px ;">{{job.salary}}/-</span> </h6>
                    <br>
                  </article>
            </div>
            
        </div>
    </div>

</section>
