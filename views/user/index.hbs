<div class="main-banner" id="top">
    <img src="user/images/job-head2.jpg" alt="">
</div>
<!-- ***** Main Banner Area End ***** -->
<section>
    <div class="container" style="margin-top:140px ;">
       <form action="/searchjob" method="get" >
        <div class="row">
             
            <div class="col-md-4">
                <div class="input-group">
                   <select name="category" id="category" class="form-control">
                       <option value="" selected="selected" disabled>--Select Category--</option>
                       {{#each categories}}
                       <option value="{{this.category}}">{{this.category}}</option>
                       {{/each}}
                   </select>
                </div>
            </div>
            <div class="col-md-4">
                <div class="input-group">
                   <input type="text" class="form-control" name="jobname" placeholder="search by job name" id="jobname">
                    
                </div>
            </div>
            <div class="col-md-3">
                <div class="input-group">
                   <input type="text" class="form-control" name="location" placeholder="search by location" id="location">
                    
                </div>
            </div>
            <button  class="btn btn-danger col-md-1"><span
                    class="fa fa-search "></span> </button>
                     
        </div>
       </form>
    </div>
</section>


