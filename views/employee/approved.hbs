<div id="page-wrapper">
    <div class="header">
        <h1 class="page-header mb-5">
            Approved
        </h1>
        
    </div>
    <div class="container" style="margin-top:62px;">
        <div class="row">
        
            <div class="col-md-11">
                {{#each approved}}
                <div class="card mt-3 col-md-12 shadow-lg p-3 mb-5">
                    <div class="card-body">
                        <h5 class="card-title"></h5>
                    </div>
                    <ul class="h4">
                        <li class="list-group-item">Name<span style="float: right;">{{this.name}}</span></li>
                        <li class="list-group-item">Location<span style="float: right;">{{this.location}}</span></li>
                        <li class="list-group-item">Designation<span style="float: right;">{{this.designation}}</span></li>
                        <li class="list-group-item">Type<span style="float: right;">{{this.type}}</span></li>
                        <li class="list-group-item ml-auto mr-auto col-md-12">
                            <a class="btn btn-danger col-md-3" href="/employee/reject/{{this._id}}" style="display: inline;float: right;">Delete</a>
                            <a class="btn  col-md-3" href="#" style="display: inline;float: right;margin-right:8px;">Approved <i class="fa fa-check" aria-hidden="true"></i></a>
                            <a class="btn btn-success col-md-3" href="/employee/viewresume/{{this._id}}" style="display: inline;margin-right:8px;">View Resume</a>
                        </li>
                    </ul><br><br><br>
                </div>
                {{/each}}
            </div>
        </div>
    </div>
</div>